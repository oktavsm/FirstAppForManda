<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".WishlistDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#E0E0E0">

            <ImageView
                android:id="@+id/iv_detail_wish_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upload_photo"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Upload Foto"
                app:icon="@drawable/ic_upload" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/et_detail_wish_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tulis Judul Wishlist..."
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_detail_wish_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:gravity="top"
                android:hint="Tulis catatan momen di sini..."
                android:minLines="4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_complete_wish"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tandai Selesai" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_wish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Simpan Perubahan" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
