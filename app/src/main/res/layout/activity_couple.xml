<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".CoupleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hubungkan dengan Pasangan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/et_partner_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Email Pasanganmu"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"/>

    <!-- (BARU) Input untuk Tanggal Jadian -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Jadian:"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tv_anniversary_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih tanggal"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="?attr/editTextBackground"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hubungkan"/>

</LinearLayout>
    