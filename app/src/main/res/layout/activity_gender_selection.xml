<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".GenderSelectionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satu Langkah Lagi!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih gender kamu untuk melengkapi profil."
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"/>

    <RadioGroup
        android:id="@+id/rg_gender_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_male_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pria"
            android:layout_marginEnd="16dp"/>

        <RadioButton
            android:id="@+id/rb_female_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wanita"/>
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan &amp; Lanjutkan"
        android:layout_marginTop="32dp"/>

</LinearLayout>